/* pages/usercenter/usercenter.wxss */

.avatar-area{
  display: flex;
  justify-content: center;
}

.avatar {
  overflow: hidden;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-shadow: 0px 0px 20px 2px #cccccc;
  margin-top: 80rpx;
}

label{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 80rpx;
}

.nickname{
  margin: 0 20rpx;
  flex-grow: 1;
}

text{
  width: 160rpx;
}

.btn{
  background-color: #9999ff;
  display: flex;
  flex-direction: column;
  justify-content: center;
}